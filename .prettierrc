{
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "es5",
  "useTabs": false,
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "endOfLine": "auto",
  "semi": true,

  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-twin.macro"
  ],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^routes/(.*)$",
    "^styles/(.*)$",
    "^recoils/(.*)$",
    "^pages/(.*)$",
    "^components/(.*)$",
    "^apis/(.*)$",
    "^queries/(.*)$",
    "^hooks/(.*)$",
    "^utils/(.*)$",
    "^[./]",
    "^constants/(.*)$",
    "^assets/(.*)$"
  ]
}
